{
  "type": "module",
  "scripts": {
    "lint:js": "eslint --fix \"source/**/*.js\"",
    "lint:js:nofix": "eslint \"source/**/*.js\"",
    "lint:css": "stylelint --fix \"source/**/*.css\"",
    "lint:css:nofix": "stylelint \"source/**/*.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:nofix": "npm run lint:js:nofix && npm run lint:css:nofix",
    "test": "npm run lint:nofix",
    "build": "node build.js"
  },
  "devDependencies": {
    "@atjn/eslint-config": "^8.0.0",
    "@atjn/stylelint-config": "^5.0.0",
    "adm-zip": "^0.5.10",
    "eslint": "^8.44.0",
    "fs-extra": "^11.1.1",
    "stylelint": "^15.10.1",
    "stylelint-stylistic": "^0.4.3"
  }
}
