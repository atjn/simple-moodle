{

  "description": "Make Moodle simpler",
  "manifest_version": 3,
  "name": "Simple Moodle",
  "version": "1.0.0",
  "homepage_url": "https://github.com/atjn/simple-moodle",
  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "144": "images/icon-144.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["simpleMoodle.js"]
    }
  ],

  "web_accessible_resources": [
      {
        "matches": ["<all_urls>"],
        "resources": [ "scripts/*", "styles/*" ]
      }
  ]

}
